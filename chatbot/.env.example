# .env.example

# Your OpenAI API key (required for chatbot functionality)
OPENAI_API_KEY=your_openai_api_key_here

# Port your app will run on
PORT=3000

# Node environment (production, development, etc.)
NODE_ENV=production

# PostgreSQL database connection string
# Replace credentials and host as per your environment
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/postgres?schema=public"

# Chat history limit per user (used in memory or DB logic)
CHAT_HISTORY_LIMIT=100

# WhatsApp auto-reconnect setting
WA_AUTO_RECONNECT=true

# Max retries to scan WhatsApp QR
WA_QR_MAX_RETRIES=3
